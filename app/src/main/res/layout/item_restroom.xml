<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical">

    <ImageView
            android:id="@+id/iv_pray"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"/>

    <LinearLayout
            android:id="@+id/restroom_name_layout"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/iv_pray"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_restroom_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"/>

        <TextView
                android:id="@+id/tv_road_name_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"/>
    </LinearLayout>

    <TextView
            android:id="@+id/tv_regular_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/restroom_name_layout"/>
</RelativeLayout>